             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinecraftChatColourGenerator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" 
             d:DesignWidth="400"
             FontFamily="Consolas">
    <Grid>
        <TextBlock x:Name="PreviewBlock" VerticalAlignment="Center" Text="Red" Padding="2" HorizontalAlignment="Left" Width="100"/>
