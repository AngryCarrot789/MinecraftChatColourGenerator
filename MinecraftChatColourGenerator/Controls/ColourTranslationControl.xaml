<UserControl x:Class="MinecraftChatColourGenerator.Controls.ColourTranslationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinecraftChatColourGenerator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" 
             d:DesignWidth="400"
             FontFamily="Consolas">
    <Grid>
        <TextBox x:Name="PreviewBlock" Text="Red" Padding="2" VerticalContentAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="0,0,210,0"/>
        <TextBox x:Name="ValueBox" Text="Char" Margin="0,0,155,0" Padding="3" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="50" MaxLength="1"/>
        <Rectangle x:Name="ColourPreview" HorizontalAlignment="Right" Width="150" MouseDown="ColourPreview_MouseDown" Cursor="Hand"/>
    </Grid>
</UserControl>
