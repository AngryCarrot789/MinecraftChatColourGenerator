<Application x:Class="MinecraftChatColourGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MinecraftChatColourGenerator"
             StartupUri="MainWindow.xaml" ShutdownMode="OnMainWindowClose"
             xmlns:controls="clr-namespace:MinecraftChatColourGenerator.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
                <ResourceDictionary>
                    <Style TargetType="{x:Type controls:ColourTextBox}" BasedOn="{StaticResource {x:Type RichTextBox}}"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
